#!/bin/sh

alias ^L="clear;"
alias clip="xclip -selection clipboard"
alias fbe="foreman run bundle exec"
alias g="git"
alias gap="git add --patch"
alias gc="git commit"
alias git="git"
alias gitcommit="git add -A .; git commit -v"
alias gf="git fetch"
alias gp="git push"
alias ll="clear;ls -alh;"
alias rc="RAILS_ENV=development foreman run bundle exec rails console"
alias reload="source ~/.zshrc"
alias rs="RAILS_ENV=development foreman run bundle exec rails server --binding=0.0.0.0"
alias rsp="RAILS_ENV=production foreman run bundle exec rails server --binding=0.0.0.0"
alias rspec="foreman run bundle exec rspec"
alias rspecp="rspec"
alias yolo="sudo"

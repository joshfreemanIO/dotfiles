#!/bin/sh

xcode-select --install

open https://atom.io
open https://getkap.co
open https://getpocket.com
open https://nodejs.org/en/
open https://rvm.io/
open https://screenhero.com
open https://slack.com
open https://tunnelblick.net
open https://www.google.com/chrome/browser/desktop/index.html
open https://www.videolan.org
open https://www.eclipse.org/jgit/download/
open https://www.iterm2.com/version3.html
open https://itunes.apple.com/us/app/pocket/id568494494?mt=12

# Install Homebrew & Homebrew Packages
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install awscli \
             bash-completion \
             git-completion \
             git \
             gpg \
             python3 \
             tree \
             wget \
             curl --with-openssl \
             postgres

gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
curl -sSL https://get.rvm.io | bash -s stable

pip3 install git+https://github.com/donnemartin/gitsome.git

curl "https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts" | sudo tee -a /etc/hosts

# Vim 
mkdir -p ~/.vim/autoload ~/.vim/bundle && \
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim

git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

cd ~/.vim/bundle
git clone git://github.com/altercation/vim-colors-solarized.git
